@model Kitap

<form method="post" class="container mt-5">
    <div class="border p-4 shadow-sm rounded">
        <div class="row pb-3 text-center">
            <h2 class="text-primary">Kitap Türü Sil</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="KitapAdi" class="form-label"></label>
            <input asp-for="KitapAdi" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Tanim" class="form-label"></label>
            <input asp-for="Tanim" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Yazar" class="form-label"></label>
            <input asp-for="Yazar" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Fiyat" class="form-label"></label>
            <input asp-for="Fiyat" disabled class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger btn-lg w-45">
                Kitap Türü Sil
            </button>
            <a asp-controller="Kitap" asp-action="Index" class="btn btn-secondary btn-lg w-45">
                Kitap Türlerine Geri Dön
            </a>
        </div>
    </div>
</form>
