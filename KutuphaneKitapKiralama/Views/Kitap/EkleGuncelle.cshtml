@model Kitap

<form method="post" enctype="multipart/form-data" class="container mt-5">
    <input asp-for="ResimUrl" hidden />
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="border p-4 shadow-sm rounded">
                <div class="row pb-3 text-center">
                    <h2 class="text-primary">@((Model == null) ? "Kitap Ekle" : "Kitap Güncelle")</h2>
                    <hr />
                </div>

                <div class="mb-3">
                    <label asp-for="KitapAdi" class="form-label"></label>
                    <input asp-for="KitapAdi" class="form-control" />
                    <span asp-validation-for="KitapAdi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="KitapTuruId" class="form-label"></label>
                    <select asp-for="KitapTuruId" asp-items="ViewBag.KitapTuruList" class="form-select">
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Tanim" class="form-label"></label>
                    <input asp-for="Tanim" class="form-control" />
                    <span asp-validation-for="Tanim" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Yazar" class="form-label"></label>
                    <input asp-for="Yazar" class="form-control" />
                    <span asp-validation-for="Yazar" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Fiyat" class="form-label"></label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ResimUrl" class="form-label"></label>
                    <input type="file" name="file" asp-for="ResimUrl" class="form-control" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-lg w-45">
                        @((Model != null) ? "Güncelle" : "Kitap Ekle")
                    </button>

                    <a asp-controller="Kitap" asp-action="Index" class="btn btn-secondary btn-lg w-45">
                        Kitaplara Geri Dön
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-2 d-flex align-items-center">
            @if (Model != null)
            {
                <img src="@Model.ResimUrl" class="img-fluid rounded border" alt="Kitap Resmi" />
            }
        </div>
    </div>
</form>
