@model KitapTuru

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row justify-content-center w-50">
        <div class="col">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Kitap Türü Ekle</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Ad" class="form-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Kitap Türü Ekle</button>
                            <a asp-controller="KitapTuru" asp-action="Index" class="btn btn-secondary btn-lg">Kitap Türlerine Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
