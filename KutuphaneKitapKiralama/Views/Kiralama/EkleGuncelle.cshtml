@model Kiralama

<form method="post" enctype="multipart/form-data">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="border p-4 shadow-sm rounded">
                    <div class="row pb-3 text-center">
                        <h2 class="text-primary">@((Model == null) ? "Yeni Kiralama" : "Kiralama Güncelle")</h2>
                    </div>

                    <div class="mb-3">
                        <label asp-for="OgrenciId" class="form-label"></label>
                        <input asp-for="OgrenciId" class="form-control" />
                        <span asp-validation-for="OgrenciId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="KitapId" class="form-label"></label>
                        <select asp-for="KitapId" asp-items="ViewBag.KitapList" class="form-select">
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary btn-lg w-45">
                            @((Model != null) ? "Güncelle" : "Yeni Kiralama")
                        </button>

                        <a asp-controller="Kiralama" asp-action="Index" class="btn btn-secondary btn-lg w-45">
                            Kiralamalar Geri Dön
                        </a>
                    </div>

                    @if (Model != null)
                    {
                        <div class="text-center mt-4">
                            <img src="@Model.Kitap.ResimUrl" class="img-fluid rounded border" alt="Kitap Resmi" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>